# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_width = 8
trim_trailing_whitespace = true
max_line_length = 80
indent_style = space
continuation_indent_size = 4
indent_size = 4

[*.{ps1,sh,yaml,yml}]
indent_size = 2
continuation_indent_size = 2

[*.{csproj,xml}]
indent_size = 2
quote_type = double

[*.sln]
indent_style = tab
indent_size = 2
end_of_line = crlf
